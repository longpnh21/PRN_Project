@page
@model UniClub.Razor.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>UserDto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Avatar
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.UserDto.ImageUrl" class="img-fluid" alt="UserDto Logo">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDto.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserDto.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDto.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserDto.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDto.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserDto.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDto.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserDto.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDto.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Model.UserDto.DateOfBirth.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDto.Gender)
        </dt>
        <dd class="col-sm-10">
            @{
                        if(Model.UserDto.Gender == null)
                        {
                            <div>Unknown</div>
                        }
                        else if(Model.UserDto.Gender.Value)
                        {
                            <div>Male</div>
                        }
                        else
                        {
                            <div>Female</div>
                        }
                    }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.UserDto.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
