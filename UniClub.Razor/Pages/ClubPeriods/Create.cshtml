@page
@model UniClub.Razor.Pages.ClubPeriods.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add new club period</h1>
<hr />
@if(!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-warning" role="alert">
      @Model.Message
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClubPeriod.StartDate" class="control-label"></label>
                <input type="date" asp-for="ClubPeriod.StartDate" class="form-control" />
                <span asp-validation-for="ClubPeriod.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClubPeriod.EndDate" class="control-label"></label>
                <input  type="date" asp-for="ClubPeriod.EndDate" class="form-control" />
                <span asp-validation-for="ClubPeriod.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" asp-route-clubId="@Model.ClubId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
