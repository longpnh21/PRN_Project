@page
@model UniClub.Razor.Pages.Clubs.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>University</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Logo
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Club.AvatarUrl" class="img-fluid" alt="Club Avatar">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Club.ClubName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Club.ClubName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Club.ShortName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Club.ShortName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Club.UniId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Club.UniId)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Club.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Club.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Club.ShortDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Club.ShortDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Club.EstablishedDate)
        </dt>
        <dd class="col-sm-10">
            @Model.Club.EstablishedDate.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Club.MemberCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Club.MemberCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Club.Slogan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Club.Slogan)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Club.Id">Edit</a> |
    <a asp-page="./Index" asp-route-uniid="@Model.Club.UniId">Back to List</a>
</div>
