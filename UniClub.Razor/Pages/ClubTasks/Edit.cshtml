@page
@using UniClub.Domain.Common.Enums
@model UniClub.Razor.Pages.ClubTasks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Club Task</h4>
<hr />
@if(!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-warning" role="alert">
      @Model.Message
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClubTask.Id" />
            <div class="form-group">
                <label asp-for="ClubTask.EventId" class="control-label">Event Name</label>
                <select asp-for="ClubTask.EventId" class="form-control" asp-items="ViewBag.EventId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClubTask.TaskName" class="control-label"></label>
                <input asp-for="ClubTask.TaskName" class="form-control" />
                <span asp-validation-for="ClubTask.TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClubTask.Status" class="control-label"></label>
                <select asp-for="ClubTask.Status" class="form-control" asp-items="Html.GetEnumSelectList<ClubTaskStatus>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClubTask.Description" class="control-label"></label>
                <input asp-for="ClubTask.Description" class="form-control" />
                <span asp-validation-for="ClubTask.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClubTask.StartDate" class="control-label"></label>
                <input asp-for="ClubTask.StartDate" class="form-control" />
                <span asp-validation-for="ClubTask.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClubTask.EndDate" class="control-label"></label>
                <input asp-for="ClubTask.EndDate" class="form-control" />
                <span asp-validation-for="ClubTask.EndDate" class="text-danger"></span>
            </div>  
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
