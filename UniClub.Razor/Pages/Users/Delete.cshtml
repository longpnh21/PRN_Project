@page
@model UniClub.Razor.Pages.Users.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>University</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Avatar
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.UserDto.ImageUrl" class="img-fluid" alt="UserDto Logo">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDto.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserDto.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDto.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserDto.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDto.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserDto.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDto.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserDto.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDto.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Model.UserDto.DateOfBirth.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDto.Gender)
        </dt>
        <dd class="col-sm-10">
            @{
                        if(Model.UserDto.Gender == null)
                        {
                            <div>Unknown</div>
                        }
                        else if(Model.UserDto.Gender.Value)
                        {
                            <div>Male</div>
                        }
                        else
                        {
                            <div>Female</div>
                        }
                    }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="UserDto.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
