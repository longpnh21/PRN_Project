@page
@using UniClub.Razor.Utils
@model UniClub.Razor.Pages.Universities.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>University</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Logo
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.University.LogoUrl" class="img-fluid" alt="University Logo">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.University.UniName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.University.UniName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.University.UniAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.University.UniAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.University.UniPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.University.UniPhone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.University.Slogan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.University.Slogan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.University.EstablishedDate)
        </dt>
        <dd class="col-sm-10">
            @Model.University.EstablishedDate.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.University.Website)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.University.Website)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.University.ShortName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.University.ShortName)
        </dd>
    </dl>
</div>
<div>
    @{
        var roles = SessionHelper.GetObjectFromJson<List<string>>(HttpContext.Session, "roles");
        if(roles.Any(r => r.Contains("SchoolAdmin")))
        {
             <a asp-page="/Clubs/Index" asp-route-uniid="@Model.University.Id">Go to club management</a>
             <a asp-page="/Department/Index" asp-route-uniid="@Model.University.Id">Go to club management</a>
        }
        if(roles.Any(r => r.Contains("SystemAdministrator")))
        {
            <a asp-page="./Edit" asp-route-id="@Model.University.Id">Edit</a> <div> | </div>
            <a asp-page="./Index">Back to List</a>
        }
    }
    
</div>
